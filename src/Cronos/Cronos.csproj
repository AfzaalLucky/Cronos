<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
    <TargetFrameworks>netstandard1.0;net45;net40</TargetFrameworks>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <DocumentationFile>bin\Release\netstandard1.0\Cronos.xml</DocumentationFile>
   
    <PackageId>Cronos</PackageId>
    <Authors>Andrey Dorokhov, Sergey Odinokov</Authors>
    <Owners>aidmsu, odinserj</Owners>
    <Summary>Cronos is free, open source .NET library to calculate occurrences of periodical jobs based on cron expressions. Use UTC, Local or custom time zone. Cronos deals with daylight saving time. Support non-standard characters such as L, W, #, ?.</Summary>
    <Description>Cronos is free, open source .NET library to calculate occurrences of periodical jobs based on cron expressions. Use UTC, Local or custom time zone. Cronos deals with daylight saving time. Support non-standard characters such as L, W, #, ?.</Description>
    <ProjectUrl>https://github.com/HangfireIO/Cronos</ProjectUrl>
    <PackageLicenseUrl>https://raw.github.com/HangfireIO/Cronos/master/LICENSE</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>https://github.com/HangfireIO/Cronos/releases</PackageReleaseNotes>
    <Copyright>Copyright © 2016-2017 Sergey Odinokov.</Copyright>
    <PackageTags>Cronos Cron Scheduler Recurring Jobs Tasks</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='netstandard1.0'">
    <PackageReference Include="NETStandard.Library" Version="1.6.0" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>False</Optimize>
  </PropertyGroup>

</Project>